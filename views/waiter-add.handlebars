<div class="name">Hi {{waiter_name}}!</div>
<a class="material-icons-round" href="/waiter/{{waiterID}}">home</a>
<p class="this-week">{{week}}</p>
<form class="add-shift" action="/waiter/{{waiterID}}/add" method="POST">
{{#each days}}
{{#if this.status}}
<div class="day {{this.status}}"><span>{{this.dateName}}</span><span>{{this.status}}</span></div>
{{else}}
<input type="checkbox" id={{@key}} name="{{@key}}" value={{@key}}>
<label class="day" for={{@key}}>{{this.dateName}}</label>
{{/if}}
{{/each}} 
<input class="save" type="submit" value="save"/>
</form>